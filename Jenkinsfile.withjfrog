node {
  def server = Artifactory.server 'devopsstackgenie.jfrog.io'
  def myGradleContainer = docker.image('gradle:jdk8-alpine')
  myGradleContainer.pull()
  stage('prep') {
    checkout scm
  }
  stage('build') {
     myGradleContainer.inside("--user=root -v ${env.HOME}/.gradle:/home/gradle/.gradle"){
     sh 'apk update && apk add bash'
       sh 'cd complete && ./gradlew build'
     }
  }
  stage('test') {
     myGradleContainer.inside("--user=root -v ${env.HOME}/.gradle:/home/gradle/.gradle") {
       sh 'cd complete && /bin/sh gradlew test'
     }
  }
  stage('publish') {
    def uploadSpec = """{
      "files": [
        {
          "pattern": "complete/build/libs/gs-gradle-*.jar",
          "target": "devops-gradle-dev-local/devops/stackgenie/gs-gradle/1.0/gs-gradle-1.0-docker.jar"
        }
     ]
    }"""
    server.upload(uploadSpec)
  }
}
